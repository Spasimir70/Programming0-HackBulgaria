======================== Task 10 =======================
n = input("Моля, въведете число: ")
n = int(n)

reverse = 0

while n != 0:
    number = n % 10

    reverse = reverse * 10 + number

    n = n // 10

print ("Огледалното число е: " + str(reverse))

======================== Task 11 =======================
n = input("Моля, въведете число: ")
n = int(n)

normal = n
reverse = 0

while n != 0:
    number = n % 10
    reverse = reverse * 10 + number
    n = n // 10

if normal == reverse:
    print (str(normal) + " е палиндром!")
else:
    print (str(normal) + " не е палиндром!")

