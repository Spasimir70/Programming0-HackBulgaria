======================== Task 1 =========================
first = 1
second = 10

print ("Броене от 1 до 10: ")

while first <= second:
    print (first)
    first = first + 1

print ("Обратно броене от 10 до 1: ")

first = 10
second = 1

while first >= second:
    print (first)
    first = first - 1

======================== Task 2 =========================
n = input("Моля, въведете число: ")
n = int(n)

first = 1
second = n

print ("Числата от 1 до " + str(second))

while first <= second:
    print (first)
    first = first + 1

first = n
second = 1

print ("Числата от " + str(first) + " до 1")

while first >= second:
    print (first)
    first = first - 1

======================== Task 3 =========================
a = input("Моля, въведете число A: ")
a = int(a)

b = input ("Моля, въведете число Б: ")
b = int(b)

a1 = a

print ("Брояч на числата от " + str(a) + " до " + str(b))

while a <= b:
    print (a)
    a = a + 1

print ("Брояч на числата от " + str(b) + " до " + str(a1))

while b >= a1:
    print (b)
    b = b - 1


======================== Task 4 =========================
first = input("Моля, въведете първото число от интервала: ")
first = int(first)

last = input("Моля, въведете последното число от интервала: ")
last = int(last)

while first <= last:
      first = first + 1
      number = first

    if number % 2 == 0:
        print (str(number) + " е четно!")
    else:
        print (str(number) + " е нечетно!")

